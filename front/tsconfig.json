{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@App": ["App.tsx"],
      "@api/*": ["api/*"],
      "@assets": ["assets/*"],
      "@components/*": ["components/*"],
      "@context/*": ["context/*"],
      "@hooks/*": ["hooks/*"],
      "@layouts/*": ["layouts/*"],
      "@pages/*": ["pages/*"],
      "@store/*": ["store/*"],
      "@utils/*": ["utils/*"],
    },
    "target": "es2021",
    "module": "commonjs",
    "sourceMap": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    //"noEmit": true  // â†’ TypeScript emitted no output Error
  },
  "include": [
    "src/**/*",
    "src/utils/custom.d.ts",
    "vite.config.ts",
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
